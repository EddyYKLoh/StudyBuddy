<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewSuggestedPostFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/viewSuggestedPostProfilePicNIV"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/viewSuggestedPostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/viewSuggestedPostProfilePicNIV"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
            android:id="@+id/viewSuggestedPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Title"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/viewSuggestedPostProfilePicNIV"/>


        <TextView
            android:id="@+id/viewSuggestedPostDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text"
            android:padding="16dp"
            android:text="Details"
            android:layout_below="@id/viewSuggestedPostTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"  />


        <TextView
            android:id="@+id/viewSuggestedPostSubjectTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/viewSuggestedPostDetails"/>

        <TextView
            android:id="@+id/viewSuggestedPostMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="You are highly recommend to help this request based on your criteria."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/viewSuggestedPostSubjectTags"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/viewSuggestedPostMessage">

            <Button
                android:id="@+id/viewSuggestedPostAcceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:text="ACCEPT"/>

            <Button
                android:id="@+id/viewSuggestedPostDismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="DISMISS"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

