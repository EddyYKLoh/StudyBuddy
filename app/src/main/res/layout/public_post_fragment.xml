<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/publicPostRequestFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/publicPostTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/publicPostTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/publicPostTitleTextView"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/publicPostDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/publicPostTitleEditText"
        android:layout_marginTop="16dp"
        android:text="Details:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/publicPostNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next" />

    <EditText
        android:id="@+id/publicPostDetailsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/publicPostNextButton"
        android:layout_below="@id/publicPostDetailsTextView"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text"
        android:gravity="top"
        android:padding="10dp" />


</RelativeLayout>

